extends ../layout


block content
    .row
        .col-md-6
            h1 Idrees's Course List
        .col-md-6
            a(href="/products/add" class="btn btn-primary") Add Item
        table.table
            thead
                tr
                    th Course Name
                    th Course ID
                    th Course Duration
                    th Course Fee
            tbody
                each product in courses
                    tr 
                        td=product.CourseName
                        td=product.CourseID
                        td=product.CourseDuration +"Hr"
                        td=product.CourseFee 
                        td  
                            a(href="/products/delete/"+product._id    class="btn btn-danger") Delete
                            a(href="/products/edit/"+product._id    class="btn btn-info") Edit
